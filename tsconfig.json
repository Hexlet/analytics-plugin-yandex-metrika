{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "tsBuildInfoFile": "./node_modules/.tmp/tsbuildinfo.json",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["types/index.d.ts"],
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "eslint.config.ts"]
}
