{
  "compilerOptions": {
    "outDir": "dist",
    "module": "preserve",
    "tsBuildInfoFile": "./node_modules/.tmp/tsbuildinfo.json",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src"],
}
