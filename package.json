{
  "name": "@hexlet/analytics-plugin-yandex-metrika",
  "version": "1.0.10",
  "type": "module",
  "description": "Yandex Metrika plugin for DavidWells Analytics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "publish:github": "npm publish --registry https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "analytics": "^0.8.16"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "npm-check-updates": "^19.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "release-it": "^19.0.6"
  },
  "release-it": {
    "hooks": {
      "before:release": "npm run build",
      "after:npm:release": "npm run publish:github"
    },
    "npm": {
      "publish": true,
      "publishArgs": [
        "--registry",
        "https://registry.npmjs.org/",
        "--access",
        "public"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hexlet/analytics-plugin-yandex-metrika.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "analytics",
    "Yandex Metrika"
  ],
  "author": "Hexlet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hexlet/analytics-plugin-yandex-metrika/issues"
  },
  "homepage": "https://github.com/Hexlet/analytics-plugin-yandex-metrika#readme"
}
